                                <p>${data.credits?.crew?.find(c => c.job === 'Director')?.name || 'N/A'}</p>
                            </div>
                            <div class="detail-item">
                                <h4>Ng√¢n S√°ch</h4>
                                <p>${movie.budget ? '$' + movie.budget.toLocaleString() : 'N/A'}</p>
                            </div>
