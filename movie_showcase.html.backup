        function sortMovies(sortBy) {
            let sorted = [...filteredMovies];
            
            switch(sortBy) {
                case 'rating':
                    sorted.sort((a, b) => b.rating - a.rating);
                    break;
                case 'year':
                    sorted.sort((a, b) => parseInt(b.year) - parseInt(a.year));
                    break;
                case 'title':
                    sorted.sort((a, b) => a.title.localeCompare(b.title));
                    break;
            }
            
            displayMovies(sorted);
        }

        function searchMovies() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            if (!searchTerm) {
                filteredMovies = currentGenre === 'all' ? allMovies : 
                    allMovies.filter(movie => movie.genres.includes(currentGenre));
            } else {
                const baseMovies = currentGenre === 'all' ? allMovies : 
                    allMovies.filter(movie => movie.genres.includes(currentGenre));
                    
                filteredMovies = baseMovies.filter(movie =>
                    movie.title.toLowerCase().includes(searchTerm)
                );
            }
            
            displayMovies(filteredMovies);
